{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": false,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "outDir": "build",
    "incremental": true,
    "target": "esnext",
    "module": "esnext",
    "paths": {
      "@core/*": [
        "./src/core/*"
      ],
      "@auctions/domain/*": [
        "./src/auctions/domain/*"
      ],
      "@auctions/repositories/*": [
        "./src/auctions/repositories/*"
      ],
      "@auctions/use-cases/*": [
        "./src/auctions/use-cases/*"
      ],
      "@notifications/domain/*": [
        "./src/notifications/domain/*"
      ],
      "@notifications/use-cases/*": [
        "./src/notifications/use-cases/*"
      ],
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}