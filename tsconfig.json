{
  "compilerOptions": {
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": false,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "outDir": "build",
    "target": "ESNext",
    "module": "ESNext",
    "paths": {
      "@core/*": [
        "./src/core/*"
      ],
      "@user-module": [
        "./src/modules/user"
      ],
      "@user-module/*": [
        "./src/modules/user/*"
      ],
      "@automatic-module": [
        "./src/modules/automatic"
      ],
      "@automatic-module/*": [
        "./src/modules/automatic/*"
      ],
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}